@model WebApplicationWithImageAndIcon.Models.Player

@{
    ViewBag.Title = "Delete";
}

<div class="card mt-3">
    <div class="card-body">
        <h3 class="card-title display-4 alert alert-danger">Are you sure you want to delete this Player?</h3>
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Sports.SportsName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Sports.SportsName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PlayerName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PlayerName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.JoinDate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.JoinDate)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PlayerGrade)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PlayerGrade)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PicturePath)
                </dt>

                <dd>
                    <img src="@Url.Content(Model.PicturePath)" width="35" />
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>


